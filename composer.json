{
    "name": "kpzsproductions/challengify",
    "description": "Challengify is a platform for daily micro-challenges in creativity, wellness, and skills, where users complete tasks, share responses, and earn badges through community voting.",
    "type": "project",
    "license": "proprietary",
    "autoload": {
        "psr-4": {
            "Kpzsproductions\\Challengify\\": "src/"
        }
    },
    "authors": [
        {
            "name": "kpzsproductions"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "nikic/fast-route": "^1.3",
        "laminas/laminas-diactoros": "^3.6",
        "relay/relay": "^3.0",
        "vlucas/phpdotenv": "^5.6",
        "respect/validation": "^2.4",
        "firebase/php-jwt": "^6.11",
        "catfan/medoo": "^2.2",
        "robmorgan/phinx": "^0.16.9",
        "symfony/security-csrf": "^7.3",
        "monolog/monolog": "^3.9",
        "php-di/php-di": "^7.0",
        "symfony/mailer": "^7.3",
        "guzzlehttp/guzzle": "^7.9",
        "filp/whoops": "^2.18",
        "intervention/image": "^3.11",
        "ramsey/uuid": "^4.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.2",
        "mockery/mockery": "^1.6",
        "fakerphp/faker": "^1.24",
        "squizlabs/php_codesniffer": "^3.13",
        "friendsofphp/php-cs-fixer": "^3.75",
        "phpstan/phpstan": "^2.1"
    }
}
